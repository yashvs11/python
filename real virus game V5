
# This function will print out the details about the countries, percentage infected and their lockdown status.
def print_results(country_tag , infected_percent, lockdown_status):
    results = "" + country_tag + " has recorded " + str(infected_percent) + " percent infected, and "
    if lockdown_status == True:
        results += "it is unfortunately in lockdown."
    else:
        results += "luckily is not in lockdown."
    return results

# this list will store all the names of countries
country_tag = []
# this list will store all the infected percentage of the countries
infected_percent = []
# this will hold information if the country will declare open or closed
lockdown_status = []

# this function will collect incoming data from the user
def add_country():
    # a while loop for the user to keep on adding countries until the user is finished
    while True:
        # ask the user to enter a country
        country = input(
            "Type in the desired country you would like to add and than proceed to tap on enter. Type in \"done\" when you are finished.")
        infected = f"Report the present amount of infected people for {country} and continue to tap on enter."
        if country != "done":
            # converts the string into an integer
            infected = int(input(infected))
            # this will transfer the data entered by the user to the list
            country_tag.append(country)
            infected_percent.append(infected)
            lockdown_status.append(False)
            return add_country()
        # if the user types in done it will break out of the loop
        if country == "done":
            break

# This function will enquire from the user which country they want to help
def help():
    help_country = "which country would you like to help? choose from the following"
    while True:
        # This will show the user the countries he typed in earlier
        for country in country_tag:
            print(country)
        # ask which country the user wants to help
        new_help = (input(help_country))
        # this goes the list to see if the country intended to help is valid
        for country in country_tag:
          if new_help == country:
            # returns the name when the country is valid
            return new_help
        # prints an error message if the country doesnt match and goes back to the loop
        print("Invalid error, try again")


def advance_day(new_help):
    list = 0
    for country in country_tag:
        # When a country is helped than infected percentage decreases by 40%
        # When the country is on 40% or below we make it equal to 0
        if country == new_help:
            if infected_percent[list] >= 40:
                infected_percent[list] = infected_percent[list] - 40
            else:
                infected_percent[list] = 0

        # The other countries that didn't get help goes up by 20% for the infected percentage
        # if the country is already 80% above we make it equal to 100
        else:
            if infected_percent[list] >= 80:
                infected_percent[list] = 100
            else:
                infected_percent[list] = infected_percent[list] + 20
        # this will print all the information of the countries status
        print(print_results(country_tag[list], infected_percent[list],
                            lockdown_status[list]))
        list += 1

#Main code
add_country()
for i in range(0, 5):
    advance_day(help())
